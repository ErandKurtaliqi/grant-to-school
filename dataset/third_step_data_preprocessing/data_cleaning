def read_data(path: str) -> pd.DataFrame:
    df = pd.read_csv(path)
    # (Opsional) Trim whitespaces pÃ«r kolonat kategorike
    for col in df.select_dtypes(include="object").columns:
        df[col] = df[col].astype(str).str.strip()
    return df

def main():
    ensure_dir(OUTPUT_DIR)
    df = read_data(INPUT_CSV)

    # 0) Ruaj versionin origjinal (opsional)
    df.to_csv(os.path.join(OUTPUT_DIR, "00_raw.csv"), index=False)
