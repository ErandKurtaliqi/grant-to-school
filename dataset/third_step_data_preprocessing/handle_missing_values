def handle_missing_values(df: pd.DataFrame):
    print("ğŸ§© Numri i mungesave pÃ«r kolonÃ«:")
    print(df.isnull().sum())

    # 1ï¸âƒ£ Heq kolonat qÃ« janÃ« plotÃ«sisht bosh
    df = df.dropna(axis=1, how='all')

    # 2ï¸âƒ£ Heq rreshtat vetÃ«m nÃ«se mungojnÃ« kolonat kritike
    df = df.dropna(subset=['Year', 'Amount of Scholarship'])

    # 3ï¸âƒ£ PlotÃ«so tÃ« tjerat
    df['State name'] = df['State name'].fillna('Unknown')
    df['Category name'] = df['Category name'].fillna('Unknown')
    df['Class'] = df['Class'].fillna(df['Class'].median())

    return df
